<odoo>
    <data>
        <record model="ir.ui.view" id="informacion_graph_view_alto">
            <field name="name">informacion.grafico</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <graph string="alto" type="bar">
                    <field name="alto_en_cms" type="row"/>
                </graph>
            </field>
        </record>
        <record model="ir.ui.view" id="informacion_graph_view_ancho">
            <field name="name">informacion.grafico</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <graph string="ancho" type="bar">
                    <field name="ancho_en_cms" type="row"/>
                </graph>
            </field>
        </record>
        <record model="ir.ui.view" id="informacion_graph_view_longo">
            <field name="name">informacion.grafico</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <graph string="longo" type="bar">
                    <field name="longo_en_cms" type="row"/>
                </graph>
            </field>
        </record>
        <record model="ir.ui.view" id="informacion_graph_view_peso">
            <field name="name">informacion.grafico</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <graph string="longo" type="bar">
                    <field name="peso" type="row"/>
                </graph>
            </field>
        </record>
        <record model="ir.ui.view" id="informacion_pivot_view">
            <field name="name">informacion.pivot</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <pivot string="pivotando">
                    <field name="alto_en_cms" type="row"/>
                    <field name="sexo_traducido" type="col"/>
                    <field name="densidade" type="measure"/>
                    <field name="peso" type="measure"/>
                    <field name="volume" type="measure"/>
                </pivot>
            </field>
        </record>
        <record model="ir.actions.act_window" id="informacion_list_action">
            <field name="name">modulo odoo_basico, modelo informacion</field>
            <field name="res_model">odoo_basico.informacion</field>
            <field name="view_mode">list,form,pivot</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Tes que crear o 1º Rexistro</p>
            </field>
        </record>
        <record model="ir.actions.act_window" id="informacion_graph_alto_action">
            <field name="name">Gráfica Alto</field>
            <field name="res_model">odoo_basico.informacion</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="informacion_graph_view_alto"/>
        </record>
        <record model="ir.actions.act_window" id="informacion_graph_ancho_action">
            <field name="name">Gráfica Ancho</field>
            <field name="res_model">odoo_basico.informacion</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="informacion_graph_view_ancho"/>
        </record>
        <record model="ir.actions.act_window" id="informacion_graph_longo_action">
            <field name="name">Gráfica longo</field>
            <field name="res_model">odoo_basico.informacion</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="informacion_graph_view_longo"/>
        </record>
        <record model="ir.actions.act_window" id="informacion_graph_peso_action">
            <field name="name">Gráfica peso en KG.s</field>
            <field name="res_model">odoo_basico.informacion</field>
            <field name="view_mode">graph</field>
            <field name="view_id" ref="informacion_graph_view_peso"/>
        </record>


        <record model="ir.ui.view" id="informacion_list_view">
            <field name="name">odoo_basico.list</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="alto_en_cms"/>
                    <field name="ancho_en_cms"/>
                    <field name="longo_en_cms"/>
                    <field name="volume"/>
                    <field name="peso"/>
                    <field name="densidade"/>
                    <field name="autorizado"/>
                    <field name="sexo_traducido"/>
                </list>
            </field>
        </record>


        <record model="ir.ui.view" id="informacion_form_view">
            <field name="name">odoo_basico.form</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <form string="Formulario de información">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Datos de Texto">
                                <group>
                                    <field name="descripcion"/>
                                    <field name="autorizado"/>
                                    <field name="sexo_traducido"/>
                                </group>
                            </page>
                            <page string="Datos Numéricos">
                                <group>
                                    <group>
                                        <field name="literal" readonly="1"/>
                                        <field name="alto_en_cms"/>
                                        <field name="ancho_en_cms"/>
                                        <field name="longo_en_cms"/>
                                    </group>
                                    <group>
                                        <field name="peso"/>
                                        <field name="volume"/>
                                        <field name="densidade"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Datos Binary">
                                <group>
                                    <group>
                                        <field name="foto" widget="image" class="oe_avatar"/>
                                        <field name="foto" widget="image"/>
                                    </group>
                                    <group>
                                        <field name="adxunto_nome" invisible="1"/>
                                        <field name="adxunto" filename="adxunto_nome"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Datos">
                            </page>
                            <page string="Datos">
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.filters" id="filtro1">
            <field name="name">Filtro informacion 1</field>
            <field name="model_id">odoo_basico.informacion</field>
            <field name="context">{'group_by': ['autorizado']}</field>
            <field name="is_default">true</field>
            <field name="active">true</field>
            <field name="sort">[]</field>
            <field name="domain">[]</field><!-- Aquí iría o filtro -->
            <field name="user_id"></field><!-- En blanco para que esté dispoñible para todos os usuarios -->
            <field name="action_id"/><!-- Se queremos que o filtro se aplique a todas as accións do modelo, senon teríamos que usar a seguinte sintaxe:-->
            <!--            <field name="action_id"-->
            <!--                   eval="ref('odoo_basico.informacion_list_action')"/>&lt;!&ndash; Obtemos o id a partir do id externo&ndash;&gt;-->
        </record>
        <record model="ir.filters" id="filtro2">
            <field name="name">Filtro informacion 2</field>
            <field name="model_id">odoo_basico.informacion</field>
            <field name="context">{'group_by': ['autorizado']}</field>
            <field name="is_default">false</field>
            <field name="active">true</field>
            <field name="sort">[]</field>
            <field name="domain">['|','&amp;',('autorizado', '=', False),('sexo_traducido', '=', 'Mujer'),('name',
                '=','Rexistro 3' )]
            </field><!-- Aquí iría o filtro -->
            <field name="user_id"></field><!-- En blanco para que esté dispoñible para todos os usuarios -->
            <field name="action_id"/><!-- Se queremos que o filtro se aplique a todas as accións do modelo, senon teríamos que usar a seguinte sintaxe:-->
            <!--            <field name="action_id"-->
            <!--                   eval="ref('odoo_basico.informacion_list_action')"/>&lt;!&ndash; Obtemos o id a partir do id externo&ndash;&gt;-->
        </record>

    </data>
</odoo>
