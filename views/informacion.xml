<odoo>
    <data>
        <record model="ir.actions.act_window" id="informacion_list_action">
            <field name="name">modulo odoo_basico, modelo informacion</field>
            <field name="res_model">odoo_basico.informacion</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"> Tes que crear o 1º Rexistro </p>
            </field>
        </record>

        <record model="ir.ui.view" id="informacion_list_view">
            <field name="name">odoo_basico.list</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <list >
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="alto_en_cms"/>
                    <field name="ancho_en_cms"/>
                    <field name="longo_en_cms"/>
                    <field name="volume"/>
                    <field name="peso"/>
                    <field name="densidade"/>
                    <field name="autorizado"/>
                    <field name="sexo_traducido"/>
                </list>
            </field>
        </record>


        <record model="ir.ui.view" id="informacion_form_view">
            <field name="name">odoo_basico.form</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <form string="Formulario de información">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Datos de Texto">
                                <group>
                                    <field name="descripcion"/>
                                    <field name="autorizado"/>
                                    <field name="sexo_traducido"/>
                                </group>
                            </page>
                            <page string="Datos Numéricos">
                                <group>
                                    <group>
                                        <field name="alto_en_cms"/>
                                        <field name="ancho_en_cms"/>
                                        <field name="longo_en_cms"/>
                                    </group>
                                    <group>
                                        <field name="peso"/>
                                        <field name="volume"/>
                                        <field name="densidade"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Datos">
                            </page>
                            <page string="Datos">
                            </page>
                            <page string="Datos">
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
